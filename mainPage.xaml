<Page x:Class="Onigaku.mainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Onigaku"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="mainThing"
      Background="#171717">

    <!--<Page.Background>
        <ImageBrush ImageSource="Resources\BC_BG.jpg" x:Name="BG"/>
    </Page.Background>-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="9*"/>

        </Grid.RowDefinitions>
        <UserControl Name="UpperPanel">
            <StackPanel VerticalAlignment="Top" Height="35">
                <Grid x:Name="controlPanel" Background="Black" Opacity="0.4">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="minimizeButton" FontFamily="Segoe MDL2 Assets" FontSize="15" Content="&#xE921;" Width="38" Height="30" VerticalContentAlignment="Bottom" Click="minimizeWindow" Foreground="AliceBlue" Background="Transparent" BorderBrush="Transparent">
                        </Button>
                        <Button x:Name="openScaleButton" FontFamily="Segoe MDL2 Assets" FontSize="15" Content="&#xE922;" Width="38" Height="30" Click="changeWindowScale" Foreground="AliceBlue" Background="Transparent" BorderBrush="Transparent">
                        </Button>
                        <Button x:Name="closeButton" FontFamily="Segoe MDL2 Assets" FontSize="15" Content="&#xE8BB;" Width="38" Height="30" Click="closeWindow" Foreground="AliceBlue" Background="Transparent" BorderBrush="Transparent"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </UserControl>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden" Margin="0,0,-0.4,0" Grid.RowSpan="4"/>
            <Button x:Name="SQLForm" Grid.Row="0" Content="User Page" HorizontalAlignment="Left" Height="80" Margin="50,0,0,0" VerticalAlignment="Center" Width="164" Click="SQLFormOpen"/>
            <Button x:Name="playerOpenButton" Content="Sign Up" HorizontalAlignment="Left" Height="59" Margin="675,10,0,0" VerticalAlignment="Top" Width="115" Click="openSignUp"/>
            <Button x:Name="play" FontFamily="Segoe MDL2 Assets" Content="&#xE768;" HorizontalAlignment="Left" Height="74" Margin="677,50.6,0,0" Grid.Row="2" VerticalAlignment="Top" Width="113" Click="Button_Click"/>
            <StackPanel Name="music_panel" HorizontalAlignment="Left" Height="250" Margin="234,10,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="364"/>
        </Grid>
    </Grid>
</Page>
